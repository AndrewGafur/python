# Setting password 
while True:
    password = input("Enter your password: ")
    if len(password) < 4:
        print("Your password should include more than 4 symbols!")
    else:
        break

# Confirming password
while True:
    confirm_password = input("Confirm your password: ")
    if password == confirm_password:
        print("Date saved.")
        break
    print('Confirm your password!')
